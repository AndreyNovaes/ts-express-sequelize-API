{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2017",
    "lib": ["es6"],
    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    /* JavaScript Support */
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "noImplicitAny": true,
    "skipLibCheck": true,
  }
}
